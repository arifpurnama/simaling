<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".Login" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:src="@drawable/logo" />
    <TextView
        android:id="@+id/label1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login System"
        android:fontFamily="@font/roboto_slab"
        android:textSize="20dp"
        android:textColor="@color/blue_grey_500"
        android:textAlignment="center"
        android:layout_below="@id/imageView"/>
    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/arf_text_mod"
        android:layout_marginTop="19dp"
        android:textColor="@color/blue_grey_500"
        android:textColorHint="@color/blue_grey_500"
        android:drawableLeft="@drawable/ic_credit_card_black_24dp"
        android:drawablePadding="13dp"
        android:padding="16dp"
        android:inputType="number"
        android:hint="NO. KTP"
        android:maxLength="16"
        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:fontFamily="@font/roboto_slab"
        android:layout_below="@id/label1"
        android:layout_centerHorizontal="true"
        android:id="@+id/username"/>
    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/blue_grey_500"
        android:textColor="@color/blue_grey_500"
        android:background="@drawable/arf_text_mod"
        android:layout_marginTop="19dp"
        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        android:drawablePadding="13dp"
        android:padding="16dp"
        android:hint="PASSWORD"
        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:fontFamily="@font/roboto_slab"
        android:inputType="textPassword"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:id="@+id/password"/>
    <Button
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="LOG IN"
        android:fontFamily="@font/roboto_slab_bold"
        android:padding="16dp"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:background="@drawable/arf_btn_mod"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_login"/>
    <TextView
        android:id="@+id/l_aktivasi"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Silahkan daftarkan NIK anda disini"
        android:fontFamily="@font/roboto_slab_bold"
        android:layout_marginTop="12dp"
        android:textSize="12dp"
        android:textColor="@color/blue_grey_500"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:clickable="true"
        android:layout_below="@id/btn_login"/>
</RelativeLayout>
